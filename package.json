{
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:host\" \"npm run dev:admin\" \"npm run dev:client\"",
    "dev:host": "cd src/resources && npm run dev",
    "dev:admin": "cd src/resources/microfrontends/admin && npm run start-mf",
    "dev:client": "cd src/resources/microfrontends/client && npm run start-mf",
    "install:all": "npm install && cd src/resources && npm install && cd microfrontends/admin && npm install && cd ../client && npm install"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "msnodesqlv8": "^5.1.1",
    "mssql": "^12.2.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "vue-i18n": "^11.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mssql": "^9.1.8",
    "@types/node": "^24.10.4",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
